<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_nav"
    android:layout_width="match_parent"
    android:layout_height="@android:dimen/app_icon_size"
    android:layout_marginTop="120dip"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/buttonVPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/voir_plus"
        tools:layout_editor_absoluteX="274dp"
        tools:layout_editor_absoluteY="64dp" />

    <Button
        android:id="@+id/buttonEvent"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:text="@string/les_ev_nements"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="64dp" />


    <Button
        android:id="@+id/buttonAdvice"
        android:layout_width="346dp"
        android:layout_height="109dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/donner_votre_avis_sur_un_cours"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="254dp" />

    <Button
        android:id="@+id/buttonIdea"
        android:layout_width="351dp"
        android:layout_height="126dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/boite_id_es"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="368dp" />

</android.support.constraint.ConstraintLayout>